{
  "name": "storybook-addon-playground",
  "version": "0.0.1",
  "description": "A playground to enable consumers learn how to use the component library or to reproduce bugs",
  "type": "module",
  "keywords": [
    "playground",
    "sandbox",
    "code",
    "debug",
    "learn",
    "reproduce",
    "bugs",
    "component",
    "storybook-addons"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/YossiSaadi/storybook-addon-playground"
  },
  "storybook": {
    "displayName": "Playground",
    "supportedFrameworks": [
      "react"
    ],
    "icon": "https://user-images.githubusercontent.com/321738/63501763-88dbf600-c4cc-11e9-96cd-94adadc2fd72.png"
  },
  "author": "Yossi Saadi <yossisaadi@gmail.com>",
  "license": "MIT",
  "exports": {
    "./manager": {
      "import": "./dist/manager.js",
      "types": "./dist/manager.d.ts"
    },
    "./index": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.d.ts"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "npm run build -- -w",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "storybook": "storybook dev -p 6006",
    "storybook:quiet": "npm run storybook",
    "start": "run-p build:watch storybook:quiet"
  },
  "dependencies": {
    "@uiw/codemirror-extensions-langs": "^4.21.21",
    "@uiw/react-codemirror": "^4.21.21",
    "lz-string": "^1.5.0",
    "monday-ui-style": "^0.1.204",
    "prettier": "^2.3.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@storybook/addon-essentials": "^7.6.4",
    "@storybook/react": "^7.6.4",
    "@storybook/react-vite": "^7.6.4",
    "@types/node": "^18.19.3",
    "@types/prettier": "^2.7.3",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.8",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "monday-ui-react-core": "^2.69.1",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-jsx-parser": "^1.29.0",
    "rollup": "^4.7.0",
    "rollup-plugin-scss": "^4.0.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "sass": "^1.69.5",
    "storybook": "^7.6.4",
    "typescript": "^4.9.5",
    "vite": "^5.0.7"
  },
  "peerDependencies": {
    "@storybook/components": ">=7.5.3",
    "@storybook/core-events": ">=7.5.3",
    "@storybook/manager-api": ">=7.5.3",
    "@storybook/types": ">=7.5.3",
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  }
}
