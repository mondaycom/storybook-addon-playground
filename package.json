{
  "name": "storybook-addon-playground",
  "version": "2.0.1",
  "description": "A playground to enable consumers learn how to use the component library or to reproduce bugs",
  "type": "module",
  "keywords": [
    "playground",
    "sandbox",
    "code",
    "debug",
    "learn",
    "reproduce",
    "bugs",
    "component",
    "storybook-addons"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mondaycom/storybook-addon-playground"
  },
  "storybook": {
    "displayName": "Playground",
    "supportedFrameworks": [
      "react"
    ],
    "icon": "https://user-images.githubusercontent.com/321738/63501763-88dbf600-c4cc-11e9-96cd-94adadc2fd72.png"
  },
  "author": "Vibe",
  "license": "MIT",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./manager": "./dist/manager.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.d.ts"
  ],
  "scripts": {
    "test": "vitest",
    "test:watch": "yarn test -- -w",
    "build": "rollup -c",
    "build:watch": "yarn build -- -w",
    "build:icons": "yarn svgr --typescript --no-svgo --out-dir src/icons",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "yarn lint -- --fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "start": "yarn build && yarn storybook"
  },
  "dependencies": {
    "@storybook/addon-links": "^8.6.14",
    "@storybook/components": "^8.6.14",
    "@uiw/codemirror-extensions-langs": "^4.23.0",
    "@uiw/codemirror-theme-github": "^4.23.0",
    "@uiw/react-codemirror": "^4.23.0",
    "@vibe/core": "^3.59.0",
    "@vibe/icons": "^1.9.0",
    "classnames": "^2.5.1",
    "lz-string": "^1.5.0",
    "prettier": "^2.8.8",
    "react-live": "^4.1.7",
    "style-inject": "^0.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.1",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/theming": "^8.6.14",
    "@storybook/types": "^8.6.14",
    "@svgr/cli": "^8.1.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^12.1.5",
    "@types/node": "^18.19.3",
    "@types/prettier": "^2.7.3",
    "@types/react": "^16.14.60",
    "@types/react-dom": "^16.9.24",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.39",
    "react": "^16.14.0",
    "react-docgen": "^7.0.3",
    "react-dom": "^16.14.0",
    "rollup": "^4.19.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "sass": "^1.77.8",
    "storybook": "^8.6.14",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "vite-plugin-externalize-deps": "^0.8.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.3"
  },
  "peerDependencies": {
    "@storybook/manager-api": "^8.0.0",
    "@storybook/preview-api": "^8.0.0",
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  }
}
