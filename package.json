{
  "name": "storybook-addon-playground",
  "version": "1.0.3",
  "description": "A playground to enable consumers learn how to use the component library or to reproduce bugs",
  "type": "module",
  "keywords": [
    "playground",
    "sandbox",
    "code",
    "debug",
    "learn",
    "reproduce",
    "bugs",
    "component",
    "storybook-addons"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mondaycom/storybook-addon-playground"
  },
  "storybook": {
    "displayName": "Playground",
    "supportedFrameworks": [
      "react"
    ],
    "icon": "https://user-images.githubusercontent.com/321738/63501763-88dbf600-c4cc-11e9-96cd-94adadc2fd72.png"
  },
  "author": "Vibe",
  "license": "MIT",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./manager": "./dist/manager.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.d.ts"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "npm run build -- -w",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "storybook": "storybook dev -p 6006",
    "start": "npm run build && npm run storybook"
  },
  "dependencies": {
    "@types/lodash-es": "^4.17.12",
    "@uiw/codemirror-extensions-langs": "^4.21.21",
    "@uiw/react-codemirror": "^4.21.21",
    "lodash-es": "^4.17.21",
    "prettier": "^2.3.2",
    "react-jsx-parser": "^1.29.0",
    "style-inject": "^0.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.1",
    "@storybook/addon-essentials": "^7.6.4",
    "@storybook/react": "^7.6.4",
    "@storybook/react-vite": "^7.6.4",
    "@storybook/theming": "^7.6.4",
    "@types/node": "^18.19.3",
    "@types/prettier": "^2.7.3",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.8",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitejs/plugin-react": "^4.2.1",
    "classnames": "^2.3.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "monday-ui-react-core": "^2.69.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.7.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "sass": "^1.69.5",
    "storybook": "^7.6.4",
    "typescript": "^4.9.5",
    "vite": "^5.0.7"
  },
  "peerDependencies": {
    "@storybook/components": ">=7.0.0",
    "@storybook/core-events": ">=7.0.0",
    "@storybook/manager-api": ">=7.0.0",
    "@storybook/types": ">=7.0.0",
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  }
}
